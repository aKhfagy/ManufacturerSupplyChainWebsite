@model Manufacturer.Model.OrderModel

@{
    ViewBag.Title = "Cart";
}


<div class="container">
    <div class="heading">
        <h1>
             Shopping Cart
        </h1>
    </div>

    <div class="cart transition is-open">



        <div class="table">

            <div class="layout-inline row th">
                <div class="col col-pro">Product</div>
                <div class="col col-price ">
                    Price
                </div>
                <div class="col col-qty align-center">QTY</div>
                <div class="col col-vat">VAT</div>
                <div class="col col-total">Total</div>
            </div>

            <div class="layout-inline row">

                <div class="col col-pro layout-inline">
                    <p>@Model.ItemID</p>
                </div>

                <div class="col col-price align-center ">
                    <p>@Model.Purchaise_Price</p>
                </div>

                <div class="col col-qty  align-center ">
                    <p>@Model.Item_Status</p>
                </div>

                <div class="col col-vat">
                    <p>£0.00</p>
                </div>
                <div class="col col-total col-numeric">
                    <p>@Model.Purchaise_Price </p>
                </div>
            </div>


            <div class="tf">
                <div class="row layout-inline">
                    <div class="col">
                        <p>VAT : 0.00</p>
                    </div>
                </div>

                <div class="row layout-inline">
                    <div class="col">
                        <p>Shipping : 0.00</p>
                    </div>
                </div>
                <div class="row layout-inline">
                    <div class="col">
                        <p>
                            Total : @Model.Purchaise_Price
                        </p>


                    </div>
                </div>
            </div>
        </div>

        @Html.ActionLink("Return To Orders List", "GetRecords", new { id = Model.CompanyID })
    </div>
</div>


<style>

    .shopper {
        text-transform: lowercase;
        font: 2em 'Shopper', sans-serif;
        line-height: 0.5em;
        display: inline-block;
    }

    h1 {
        text-transform: uppercase;
        font-weight: bold;
        font-size: 2.5em;
    }

    p {
        font-size: 1.5em;
    }


    .container {
        max-width: 75em;
        width: 95%;
        margin: 40px auto;
        overflow: hidden;
        position: relative;
        border-radius: 0.6em;
        box-shadow: 0 0.5em 0 rgba(138, 148, 152, 0.2);
    }

    .heading {
        padding: 1em;
        position: relative;
        z-index: 1;
    }

    .cart {
        margin: 2.5em;
        overflow: hidden;
    }

        .cart.is-closed {
            height: 0;
            margin-top: -2.5em;
        }

    .table {
        border-radius: 0.6em;
        overflow: hidden;
        clear: both;
        margin-bottom: 1.8em;
    }


    .layout-inline > * {
        display: inline-block;
    }

    .align-center {
        text-align: center;
    }

    .th {
        background-color: #333;
        color: white;
        text-transform: uppercase;
        font-weight: bold;
        font-size: 1.5em;
    }

    .tf {
        padding: 20px;
        background-color: #333;
        color: white;
        text-transform: uppercase;
        text-align: left;
        font-size: 1.2em;
    }

        .tf p {
            font-weight: bold;
        }

    .col {
        padding: 1em;
        width: 12%;
    }

    .col-pro {
        text-align: center;
        width: 44%;
    }

    .col-qty {
        text-align: center;
        width: 17%;
    }

    .col-total p{
        text-align: center;
    }

    .tf .col {
        width: 20%;
    }


    .visibility-cart {
        position: absolute;
        color: #fff;
        top: 0.5em;
        right: 0.5em;
        font: bold 2em arial;
        border: 0.16em solid #fff;
        border-radius: 2.5em;
        padding: 0 0.22em 0 0.25em;
    }





    .container {
        width: 98%;
    }

    .col-pro {
        text-align: center;
        width: 35%;
    }

    .col-qty {
        text-align: center;
        width: 22%;
    }

</style>

